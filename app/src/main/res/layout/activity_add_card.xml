<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <EditText
        android:id="@+id/new_flashcard_question"

        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:hint="Enter Question Here"

        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/new_flashcard_answer"

        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_below="@id/new_flashcard_question"

        android:hint="Enter Answer Here"

        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/new_flashcard_incorrect_answer_1"

        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_below="@id/new_flashcard_answer"

        android:hint="Enter Incorrect Answer Here"

        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/new_flashcard_incorrect_answer_2"

        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_below="@id/new_flashcard_incorrect_answer_1"

        android:hint="Enter Another Incorrect Answer Here"

        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/new_flashcard_incorrect_answer_3"

        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_below="@id/new_flashcard_incorrect_answer_2"

        android:hint="Enter Another Incorrect Answer Here"

        android:inputType="textMultiLine" />

    <ImageButton
        android:id="@+id/cancel_card_button"

        android:layout_width="70dp"
        android:layout_height="70dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="35dp"
        android:layout_marginBottom="15dp"

        android:background="@drawable/button_background"
        android:elevation="5dp"
        android:gravity="center"
        android:src="@drawable/cancel_card_icon" />

    <ImageButton
        android:id="@+id/save_card_button"

        android:layout_width="70dp"
        android:layout_height="70dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginEnd="35dp"
        android:layout_marginBottom="15dp"

        android:background="@drawable/button_background"
        android:elevation="5dp"
        android:gravity="center"
        android:src="@drawable/save_card_icon" />

</RelativeLayout>